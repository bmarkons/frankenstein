<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Accommodation</th>
      <th>Room number</th>
      <th>Bed count</th>
      <th>Description</th>
      <th>Price per night</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.accommodation.name, accommodation_path(room.accommodation) %></td>
        <td><%= room.room_number %></td>
        <td><%= room.bed_count %></td>
        <td><%= room.description %></td>
        <td><%= room.price_per_night %></td>
        <td><%= link_to 'Show', accommodation_room_path(@accommodation, room) %></td>
        <% if @accommodation.owned_by?(current_user) %>
          <td><%= link_to 'Edit', edit_accommodation_room_path(@accommodation, room) %></td>
          <td><%= link_to 'Destroy', accommodation_room_path(@accommodation, room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_accommodation_room_path(@accommodation) if @accommodation.owned_by?(current_user) && !current_user.blocked?%>
