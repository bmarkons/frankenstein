<%= form_for(accommodation) do |f| %>
  <% if accommodation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(accommodation.errors.count, "error") %> prohibited this accommodation from being saved:</h2>

      <ul>
      <% accommodation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select :accommodation_type_id, options_for_select(@accommodation_types.map { |type| [type.name, type.id] }, @accommodation_type), :prompt => "Select type" %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :latitude %>
    <%= f.number_field :latitude %>
  </div>

  <div class="field">
    <%= f.label :longitude %>
    <%= f.number_field :longitude %>
  </div>

  <div class="field">
    <%= f.label :image_url %>
    <%= f.text_area :image_url %>
  </div>

  <div class="field">
    <%= f.select :place_id, @places.map { |place| [place.name, place.id] }, :prompt => "Select place" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
