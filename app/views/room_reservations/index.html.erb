<p id="notice"><%= notice %></p>

<h1>Room Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_reservations.each do |room_reservation| %>
      <tr>
        <td><%= room_reservation.start_date %></td>
        <td><%= room_reservation.end_date %></td>
        <td><%= link_to room_reservation.room.room_number, accommodation_room_path(room_reservation.room.accommodation, room_reservation.room) %></td>
        <td><%= link_to 'Show', room_reservation %></td>
        <td><%= link_to 'Cancel', room_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
